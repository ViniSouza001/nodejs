<h1>{{categoria.nome}}</h1>
{{#each postagens}}
<div class="card mt-4">
  <div class="card-body">
    <h3>{{titulo}}</h3>
    <p>{{descricao}}</p>
    <a href="/postagens/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
    <hr>
    <small>Data de publicação: {{data}}</small>
  </div>
</div>

{{else}}
  <h5>No posts created with this category</h5>
{{/each}}