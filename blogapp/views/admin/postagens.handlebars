<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <p>Slug: {{slug}}</p>
            <small>Data: {{data}}</small><br>
            <small>Categoria: {{categoria.nome}}</small>
            <br>
            <a href="/admin/postagens/edit/{{_id}}">
                <button class="btn btn-success mt-3">Editar mensagem</button>
            </a>
            <br>
            <a href="/admin/postagens/deletar/{{_id}}">
                <button class="btn btn-danger mt-2">Deletar mensagem</button>
            </a>
        </div>
    </div>
{{else}}
    <p>No posts registered</p>
{{/each}}